@model EmployeeCRUD.Model.SubModel.EmployeeVM
@{
    ViewData["Title"] = "EmployeeDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oEmployee.IdEmployee == 0) {

    <h1>Create Employee</h1>
}
else { 

    <h1>Update Employee</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="EmployeeDetail" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oEmployee.IdEmployee" />
            <div class="mb-2">
                <label class="form-label" asp-for="oEmployee.UserName">Full Name</label>
                <input type="text" class="form-control sm" placeholder="Employee Name" asp-for="oEmployee.UserName" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oEmployee.Mail">Email</label>
                <input type="text" class="form-control sm" asp-for="oEmployee.Mail" placeholder="Employee Mail" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oEmployee.Cellphone">Telephone Number</label>
                <input type="number" class="form-control sm" asp-for="oEmployee.Cellphone" placeholder="8097884102" />
            </div>

            <div class="mb-2">

                <label class="form-label" asp-for="oEmployee.Rolid">Rol</label>
                <select class="form-select form-select-sm" asp-for="oEmployee.Rolid" asp-items="Model.oRolList">
                    <option selected disabled>-- SELECT ROL --</option>
                </select>

            </div>
            <br />

            <div class="mb-2">

                @if (Model.oEmployee.IdEmployee == 0)
                {

                    <button class="btn btn-outline-primary btn-sm w-25">CREATE</button>
                }
                else
                {
                    <button class="btn btn-outline-warning btn-sm w-25">EDIT</button>
                }

                <a class="btn btn-dark btn-sm w-25" asp-action="index" asp-controller="Home">Go back</a>
            </div>



        </form>
    </div>
</div>

